{
  "name": "valantic/pimcore-data-quality-bundle",
  "version": "1.2.0",
  "description": "Data quality score for Pimcore",
  "type": "pimcore-bundle",
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "pimcore/pimcore": "^10.0",
    "spatie/enum": "^3.13",
    "symfony/validator": "^5.0"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8.2",
    "phpstan/extension-installer": "^1.3.1",
    "phpstan/phpstan": "^1.10.26",
    "phpstan/phpstan-deprecation-rules": "^1.1.3",
    "phpstan/phpstan-strict-rules": "^1.5.1",
    "phpunit/phpunit": "^9.6.10",
    "rector/rector": "^0.15.25",
    "symfony/config": "^5.4.26",
    "symfony/dependency-injection": "^5.4.26",
    "symfony/framework-bundle": "^5.4.26",
    "symfony/http-foundation": "^5.4.26",
    "symfony/http-kernel": "^5.4.27",
    "symfony/routing": "^5.4.26",
    "tomasvotruba/class-leak": "0.1.1.72"
  },
  "license": "proprietary",
  "authors": [
    {
      "name": "Linus Metzler",
      "email": "linus.metzler@cec.valantic.com"
    },
    {
      "name": "Patrick Ryser",
      "email": "patrick.ryser@cec.valantic.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Valantic\\DataQualityBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Valantic\\DataQualityBundle\\Tests\\": "tests/"
    }
  },
  "extra": {
    "pimcore": {
      "bundles": [
        "Valantic\\DataQualityBundle\\ValanticDataQualityBundle"
      ]
    },
    "bamarni-bin": {
      "bin-links": false,
      "forward-command": true
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@composer bin all install --ansi"
    ],
    "post-update-cmd": [
      "@composer bump -D",
      "@composer bin all update --ansi",
      "@composer bin all bump"
    ],
    "phpstan": [
      "vendor/bin/phpstan analyse --memory-limit=1G"
    ],
    "php-cs-fixer": [
      "vendor-bin/phpcs/vendor/bin/php-cs-fixer fix --diff"
    ],
    "php-cs-fixer-check": [
      "vendor-bin/phpcs/vendor/bin/php-cs-fixer fix --diff --dry-run"
    ],
    "class-leak": [
      "vendor/bin/class-leak check src --skip-type='Valantic\\DataQualityBundle\\EventListener\\AdminObjectListListener' --skip-type='Valantic\\DataQualityBundle\\EventListener\\CacheListener' --skip-type='Valantic\\DataQualityBundle\\EventListener\\KernelTerminateListener' --skip-type='Valantic\\DataQualityBundle\\Model\\DataType\\Score'"
    ],
    "rector": [
      "vendor/bin/rector process"
    ],
    "test": "./vendor/bin/phpunit"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true,
      "ocramius/package-versions": true,
      "phpstan/extension-installer": true
    }
  }
}
